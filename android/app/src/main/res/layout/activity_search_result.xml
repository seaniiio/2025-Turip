<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.searchResult.SearchResultActivity">

    <ImageView
        android:id="@+id/iv_search_result_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="67dp" />

    <TextView
        android:id="@+id/tv_search_result_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_search_result_back"
        app:layout_constraintTop_toTopOf="@+id/iv_search_result_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_result_back"
        tools:text="대구" />

    <TextView
        android:id="@+id/tv_search_result_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/iv_search_result_back"
        app:layout_constraintTop_toBottomOf="@+id/iv_search_result_back"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        tools:text="검색결과 15개" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_result_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="10"
        tools:listitem="@layout/item_search_result" />

</androidx.constraintlayout.widget.ConstraintLayout>